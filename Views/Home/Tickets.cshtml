@model IEnumerable<Ticket>
@{
    ViewData["Title"] = "Tickets";
}

<div class="row mt-4">
    <div class=col-12>
        <h3>Tickets</h3>
        <table class="table table-striped" id="datatable">
            <thead>
                <tr>
                    <th>Home Team</th>
                    <th>Away Team</th>
                    <th>Year</th>
                    <th>Competition</th>
                    <th>Country</th>
                    <th>Quality</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.HomeClub.Name</td>
                        <td>@item.AwayClub.Name</td>
                        <td>@item.Year</td>
                        <td>@item.CompetitionType</td>
                        <td>@item.Country</td>
                        <td>@item.Quality</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="TicketDetails" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="DeleteTicket" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>