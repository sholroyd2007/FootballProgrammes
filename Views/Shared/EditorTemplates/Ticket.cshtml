@model Ticket
<div class="form-group">
    <label asp-for="HomeClubId">Home Club</label>
    <select class="form-control" asp-for="HomeClubId" id="select2">
        <option value=""></option>
        @foreach (var item in await FootballProgrammeService.GetAllHomeClubs())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="AwayClubId">Away Club</label>
    <select class="form-control" asp-for="AwayClubId" id="select2">
        <option value=""></option>
        @foreach (var item in await FootballProgrammeService.GetAllAwayClubs())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="Year" class="control-label"></label>
    <input asp-for="Year" class="form-control" />
    <span asp-validation-for="Year" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Country">Country</label>
    <select class="form-control" asp-for="Country" id="select2">
        @foreach (var item in (Country[])Enum.GetValues(typeof(Country)))
        {
            <option value="@item">@item</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="CompetitionType">Competition Type</label>
    <select class="form-control" asp-for="CompetitionType">
        @foreach (var item in (CompetitionType[])Enum.GetValues(typeof(CompetitionType)))
        {
            <option value="@item">@item</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="Quality">Quality</label>
    <select class="form-control" asp-for="Quality">
        @foreach (var item in (Quality[])Enum.GetValues(typeof(Quality)))
        {
            <option value="@item">@item</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>