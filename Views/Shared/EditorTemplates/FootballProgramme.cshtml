@model FootballProgramme

<div class="form-group">
    <label asp-for="HomeClubId">Home Club</label>
    <select class="form-control" style="width:100%;" asp-for="HomeClubId" id="homeTeamProgramme">
        <option value=""></option>
        @foreach (var item in await FootballProgrammeService.GetAllHomeClubs())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="AwayClubId">Away Club</label>
    <select class="form-control" style="width:100%;" asp-for="AwayClubId" id="awayTeamProgramme">
        <option value=""></option>
        @foreach (var item in await FootballProgrammeService.GetAllAwayClubs())
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="Year" class="control-label"></label>
    <input asp-for="Year" class="form-control" />
    <span asp-validation-for="Year" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Country">Country</label>
    <select class="form-control" style="width:100%;" asp-for="Country" id="countryProgramme">
        @foreach (var item in (Country[])Enum.GetValues(typeof(Country)))
        {
            <option value="@item">@item</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="CompetitionType">Competition Type</label>
    <select class="form-control" asp-for="CompetitionType">
        @foreach (var item in (CompetitionType[])Enum.GetValues(typeof(CompetitionType)))
        {
            <option value="@item">@item</option>
        }
    </select>
</div>
<div class="form-group">
    <label asp-for="Quality">Quality</label>
    <select class="form-control" asp-for="Quality">
        @foreach (var item in (Quality[])Enum.GetValues(typeof(Quality)))
        {
            <option value="@item">@item</option>
        }
    </select>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Womens" /> @Html.DisplayNameFor(model => model.Womens)
    </label>
</div>

<label for="file">Upload Images</label>
<div class="col-sm-12 col-md-12 mb-3 ">
    <input type="file"
           id="file"
           name="file"
           accept="image/png, image/jpeg, image/gif"
           class="form-control"
           multiple>
</div>