@model FootballProgramme

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addFootballProgrammeModal">
  Add Football Programme
</button>

<!-- Modal -->
<div class="modal fade" id="addFootballProgrammeModal" tabindex="-1" role="dialog" aria-labelledby="addFootballProgrammeModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addFootballProgrammeModalLabel">Add Football Programme</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form asp-action="Create" asp-area="Admin" asp-controller="FootballProgrammes">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @Html.EditorForModel()

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>