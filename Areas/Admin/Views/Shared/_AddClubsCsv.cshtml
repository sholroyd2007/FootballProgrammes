<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addClubsCsvModal">
  Add Clubs CSV
</button>

<!-- Modal -->
<div class="modal fade" id="addClubsCsvModal" tabindex="-1" role="dialog" aria-labelledby="addClubsCsvModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addClubsCsvModalLabel">Add Clubs CSV</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form asp-action="ImportClubs" asp-area="Admin" asp-controller="Home"  method="post" enctype="multipart/form-data">
            <input class="form-control-file" type="file" name="file" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>